{
    "id": "customer-feedback",
    "name": "Customer Feedback Survey",
    "schema": {
        "type": "object",
        "title": "Customer Feedback",
        "description": "We value your feedback. Please tell us about your experience.",
        "properties": {
            "satisfactionLevel": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5,
                "description": "Rate your satisfaction from 1 (poor) to 5 (excellent)"
            },
            "likedFeatures": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "description": "What features did you like?"
            },
            "improvements": {
                "type": "string",
                "description": "What could we improve?"
            },
            "contactConsent": {
                "type": "boolean",
                "description": "May we contact you for more details?"
            }
        },
        "required": [
            "satisfactionLevel"
        ]
    }
}